<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_50dp"
    tools:context=".fragments.RedeemFragment">

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="E-mail"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtxt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/txt_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18sp"
        android:text="Mobile"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/edtxt_email"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_email" />

    <EditText
        android:id="@+id/edtxt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/txt_mobile"
        app:layout_constraintTop_toBottomOf="@+id/txt_mobile" />

    <TextView
        android:id="@+id/edtxtl_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18sp"
        android:text="Coins"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/edtxt_mobile"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_mobile" />

    <EditText
        android:id="@+id/edtxt_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Reddem Coin"
        android:inputType="numberSigned|number"
        app:layout_constraintStart_toStartOf="@+id/edtxtl_coin"
        app:layout_constraintTop_toBottomOf="@+id/edtxtl_coin" />

    <Button
        android:id="@+id/btn_redeem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorSecondaryDark"
        android:text="Redeem Request"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edtxt_coins"
        app:layout_constraintStart_toStartOf="@+id/edtxt_coins"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_coins" />
</androidx.constraintlayout.widget.ConstraintLayout>