    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dimen_32dp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_loading_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:cursorVisible="true"
            android:text="wait for server"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_username_for_prize_distribution"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@drawable/border_edittext"
            android:backgroundTint="@color/colorBackground"
            android:ems="10"
            android:hint="@string/enter_correct_game_username"
            android:inputType="textPersonName"
            android:padding="@dimen/dimen_8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="@string/enter_your_game_id"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtUserGameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:autofillHints=""
            android:background="@drawable/border_edittext"
            android:backgroundTint="@color/colorBackground"
            android:ems="10"
            android:hint="@string/make_sure_it_s_correct"
            android:inputType="textPersonName"
            android:padding="@dimen/dimen_8dp"
            android:pointerIcon="cell"
            android:soundEffectsEnabled="true"
            android:textSize="14sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/join_req_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:text="@string/join_match"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="16sp"
            android:text="@string/no_enough_coins"
            android:textColor="#F4364C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tooltipText="No Enough Coin To Join This Match" />

        <Button
            android:id="@+id/addCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64sp"
            android:background="#00BCD4"
            android:gravity="center_horizontal"
            android:padding="16sp"
            android:text="@string/add_coin"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tooltipText="Add Coin To Join Match" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>