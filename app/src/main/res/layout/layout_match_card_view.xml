<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/match_game_img"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:maxHeight="227sp"
                android:scaleType="fitXY"
                android:src="@drawable/pubg_mobile"
                app:srcCompat="@drawable/pubg_mobile" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_join_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/dimen_6dp"
                app:cardElevation="8sp"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorBackground"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Already Joined"
                    android:textColor="@color/colorBackgroundSuccess"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="91dp"
                    android:layout_weight="4"
                    android:background="@drawable/img_circular"
                    android:maxHeight="50sp"
                    app:srcCompat="@drawable/logo___copy" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_game_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_marginTop="6sp"
                        android:layout_weight="5"
                        android:autoText="true"
                        android:padding="8sp"
                        android:paddingBottom="@dimen/dimen_0dp"
                        android:text="@string/pubg_mobile_india"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Deprecated,TextViewEdits,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_weight="5"
                        android:autoText="true"
                        android:gravity="top"
                        android:padding="8sp"
                        android:paddingTop="0sp"
                        android:text="@string/time_21_06_2021_at_12_00pm"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        tools:ignore="Deprecated,TextViewEdits,TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/match_offer_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:paddingBottom="16sp"
                android:visibility="gone"
                app:cardCornerRadius="12sp"
                app:cardElevation="4sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_offer_heading"
                        style="@style/Widget.AppCompat.TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="8sp"
                        android:paddingTop="@dimen/dimen_16dp"
                        android:paddingBottom="2sp"
                        android:text="New Offer On This Match"
                        android:textColor="#0E0E0E" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginEnd="@dimen/dimen_8dp"
                        android:background="#00BCD4" />

                    <TextView
                        android:id="@+id/textView_offer_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoLink="all|web|phone|email"
                        android:autoSizeMaxTextSize="24sp"
                        android:autoSizeMinTextSize="@dimen/dimen_16sp"
                        android:autoText="false"
                        android:padding="8sp"
                        android:paddingBottom="16sp"
                        android:text="On Join This Match You Get a offer and more offer so join fast to get this offer thankyou" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="@dimen/dimen_16sp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="9">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/prize_pool"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/per_kill"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/entry_fee"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:paddingTop="8sp"
                    android:weightSum="12">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="2"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_indian_rupee_coin_color"
                        app:srcCompat="@drawable/rupee" />

                    <TextView
                        android:id="@+id/txt_pool"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingStart="2sp"
                        android:text="@string/_900"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="0dp"
                        android:layout_height="24sp"
                        android:layout_weight="2"
                        android:scaleType="fitEnd"
                        android:src="@drawable/rupee" />

                    <TextView
                        android:id="@+id/txt_kill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingStart="2sp"
                        android:text="@string/_10"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="24sp"
                        android:layout_weight="2"
                        android:scaleType="fitEnd"
                        android:src="@drawable/rupee" />

                    <TextView
                        android:id="@+id/txt_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingStart="2sp"
                        android:text="@string/_10"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="9">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/type"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/version"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/map"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:paddingTop="8sp"
                    android:weightSum="9">

                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingStart="2sp"
                        android:text="@string/solo"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingStart="2sp"
                        android:text="@string/tpp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_map"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingStart="2sp"
                        android:text="@string/erengle"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8sp"
                    android:paddingTop="8sp"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/layout_slot_spot"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:padding="8sp"
                        android:visibility="gone"
                        android:weightSum="8"
                        tools:visibility="visible">

                        <ProgressBar
                            android:id="@+id/progressBar_slot"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:max="30"
                            android:progress="1"
                            android:progressTint="#FF9800" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_remaining_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Only 29 spots left"
                                android:textAlignment="viewStart" />

                            <TextView
                                android:id="@+id/txt_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1/30"
                                android:textAlignment="viewEnd"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_join"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/submit_easy_pay"
                        android:text="@string/join"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:cornerRadius="@dimen/dimen_10dp"
                        app:rippleColor="#FFFFFF"
                        tools:ignore="TextContrastCheck"
                        tools:visibility="visible" />

                    <Button
                        android:id="@+id/btnCompleted"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@color/submit_easy_pay"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="View Results"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <Button
                        android:id="@+id/btn_yt"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginEnd="2sp"
                        android:layout_weight="5"
                        android:background="#F81212"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal|center_vertical"
                        android:justificationMode="inter_word"
                        android:paddingStart="4sp"
                        android:paddingEnd="4sp"
                        android:text="@string/yt_watch_live"
                        android:textAlignment="gravity"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:typeface="sans"
                        tools:visibility="gone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8sp"
                    android:paddingTop="8sp"
                    android:weightSum="10">

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>